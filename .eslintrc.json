{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "arrow-body-style": ["error", "always"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "no-console": 1,
    "no-debugger": 2,
    "no-unused-vars": 2,
    "no-extra-semi": 2,
    "no-empty-function": 2,
    "no-alert": 2,
    "radix": 2,
    "eqeqeq": 2,
    "default-case": 2,
    "no-redeclare": 2,
    "no-dupe-class-members": 2,
    "no-multiple-empty-lines": ["error", { "max": 0 }]
  }
}
